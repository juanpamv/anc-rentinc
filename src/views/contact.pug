extends layout/layout.pug

block page
    - var page = "contact";

block head
    - var title = "Renting | Cotizar"
    - var description = "this is the description"

block content
    div.contact-grid
        div.row
            div.col-12.col-md-6.bg-image.d-none.d-md-block
                div.row
                    div.col-lg-10.offset-lg-2.fleets                        
            div.col-12.col-md-6.col-lg-5.form
                p.mb-3 Â¡Cont&aacute;ctenos! Le cotizamos el carro nuevo que usted y su negocio necesitan.
                form(action="")
                    div.form-group
                        label(for='name') Nombre:
                        input#name.form-control(type='text' aria-describedby='name' placeholder='')
                    div.form-group
                        label(for='lastName') Apellidos:
                        input#last-name.form-control(type='text' aria-describedby='LastName' placeholder='')
                    div.form-group
                        label(for='company') Empresa:
                        input#company.form-control(type='text' aria-describedby='company' placeholder='')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email' aria-describedby='email' placeholder='')
                    div.form-group
                        label(for='phone') Tel&eacute;fono:
                        input#phone.form-control(type='phone' aria-describedby='phone' placeholder='')
                    div.form-group
                        label(for='comments') Observaciones:
                        <textarea class="form-control" id="comments" rows="3"></textarea>
                    div.form-group.button-container
                        <button type="submit" class="btn btn-primary">Enviar</button>
                        <button type="submit" class="btn btn-primary cancel">Cancelar</button>